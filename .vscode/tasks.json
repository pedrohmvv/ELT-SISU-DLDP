{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Starting",
      "type": "shell",
      "command": "bash",
      "args": [".vscode/manager.sh", "-a", "${input:componentType}"]
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "componentType",
      "description": "Choose an option:",
      "options": [
        "Deploy/Update Docker Environment",
        "Run DAG in Terminal",
        "Update Docker Submodules",
        "Code Analysis",
        "Add Docker Submodule",
        "Remove/Down Docker Environment"
      ],
      "default": "Deploy/Update Docker Environment"
    }
  ]
}
